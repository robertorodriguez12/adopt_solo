<h1>Adopt Don't Shop</h1></b>
<h2>Edit the Shelter</h2></b>
<%= link_to "All Pets", "/pets", method: :get %>
<%= link_to "All Shelters", "/shelters", method: :get %>
<%= form_tag "/shelters/#{@shelter.id}", method: 'patch' do %>
  <p>Edit information about the shelter: <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}", method: :get %></p>
  <%= label_tag :name %>
  <%= text_field_tag :name, @shelter.name %>
  <%= label_tag :addres %>
  <%= text_field_tag :address, @shelter.address %>
  <%= label_tag :city %>
  <%= text_field_tag :city, @shelter.city %>
  <%= label_tag :state %>
  <%= text_field_tag :state, @shelter.state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, @shelter.zip %>

  <%= submit_tag 'Submit your Edits' %>
<% end %>
